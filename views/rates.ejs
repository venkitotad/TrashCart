<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rates</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Header Section -->
  <header class="text-center py-4 bg-white shadow">
    <h1 class="text-xl font-semibold">Check Rates</h1>
  </header>

  <!-- Search Bar -->
  <div class="max-w-md mx-auto mt-4 px-4">
    <input 
      type="text" 
      placeholder="Search for an item"
      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-400"
    />
  </div>

  <!-- Rates List -->
  <div class="max-w-md mx-auto mt-4 space-y-2 px-4">
    <!-- Rate Item -->
    <div class="flex justify-between items-center bg-white p-3 rounded-lg shadow-sm">
      <div class="flex items-center">
        <img src="https://via.placeholder.com/40" alt="Office Paper" class="h-10 w-10 rounded-lg mr-3">
        <span class="font-medium">Office Paper (A3/A4)</span>
      </div>
      <span class="text-green-600 font-semibold">Rs 14/KG</span>
    </div>

    <div class="flex justify-between items-center bg-white p-3 rounded-lg shadow-sm">
      <div class="flex items-center">
        <img src="https://via.placeholder.com/40" alt="Newspaper" class="h-10 w-10 rounded-lg mr-3">
        <span class="font-medium">Newspaper</span>
      </div>
      <span class="text-green-600 font-semibold">Rs 14/KG</span>
    </div>

    <div class="flex justify-between items-center bg-white p-3 rounded-lg shadow-sm">
      <div class="flex items-center">
        <img src="https://via.placeholder.com/40" alt="Copies" class="h-10 w-10 rounded-lg mr-3">
        <span class="font-medium">Copies/Books</span>
      </div>
      <span class="text-green-600 font-semibold">Rs 12/KG</span>
    </div>

    <div class="flex justify-between items-center bg-white p-3 rounded-lg shadow-sm">
      <div class="flex items-center">
        <img src="https://via.placeholder.com/40" alt="Cardboard" class="h-10 w-10 rounded-lg mr-3">
        <span class="font-medium">Cardboard</span>
      </div>
      <span class="text-green-600 font-semibold">Rs 8/KG</span>
    </div>

    <div class="flex justify-between items-center bg-white p-3 rounded-lg shadow-sm">
      <div class="flex items-center">
        <img src="https://via.placeholder.com/40" alt="Plastic" class="h-10 w-10 rounded-lg mr-3">
        <span class="font-medium">Pet Bottles/Plastic</span>
      </div>
      <span class="text-green-600 font-semibold">Rs 8/KG</span>
    </div>

    <!-- Add other items similarly -->

  </div>

</body>
</html>
